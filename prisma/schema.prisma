// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PrefillSession {
  id          String    @id @default(uuid())

  // Who sent the hook (e.g. "vrkp")
  partnerId   String
  // The member's id in the partner (VRKP)
  vrkpId      String

  // Short-lived loginless handoff token (in URL)
  token       String    @unique
  payload     Json

  // Control & observability
  attempts    Int       @default(0)       // how many times we issued/rotated a token
  consumed    Boolean   @default(false)   // set true after register-page consumes it
  expiresAt   DateTime
  lastIp      String?                      // optional: last caller IP
  lastUserAgent String?                    // optional: last UA

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Enforce ONE row per VRKP member per partner
  @@unique([partnerId, vrkpId])
  @@index([vrkpId])
  @@index([expiresAt])
}

enum Gender {
  Male
  Female
  Others
}

model Member {
  id        String   @id @default(uuid())
  phone     String   @unique
  email     String   @unique
  fullname  String
  aadhaar   String   @unique
  gender    Gender   
  address   String
  city      String
  state     String
  pincode   String

  dob       DateTime
  vrkpId    String   @unique


  healthRecords HealthRecord?

  programId  String
  programs  Program @relation(fields: [programId], references: [id])

  programsStartedAt DateTime @default(now())
  programsExpireAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([phone])
  @@index([email])
  @@index([aadhaar])
}

model Program {
  id          String   @id @default(uuid())
  name        String
  description String

  members     Member[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}


model HealthRecord {
  id          String           @id @default(uuid())

  memberId    String   @unique
  member      Member           @relation(fields: [memberId], references: [id])

  date        DateTime

  data        Json

  notes       String?

  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([memberId])

}
