// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PrefillSession {
  id          String    @id @default(uuid())

  // Who sent the hook (e.g. "vrkp")
  partnerId   String
  // The member's id in the partner (VRKP)
  vrkpId      String

  // Short-lived loginless handoff token (in URL)
  token       String    @unique
  payload     Json

  // Control & observability
  attempts    Int       @default(0)       // how many times we issued/rotated a token
  consumed    Boolean   @default(false)   // set true after register-page consumes it
  expiresAt   DateTime
  lastIp      String?                      // optional: last caller IP
  lastUserAgent String?                    // optional: last UA

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Enforce ONE row per VRKP member per partner
  @@unique([partnerId, vrkpId])
  @@index([vrkpId])
  @@index([expiresAt])
}

enum Gender {
  Male
  Female
  Others
}

model Member {
  id        String   @id @default(uuid())
  phone     String   @unique
  email     String   @unique
  fullname  String
  aadhaar   String   @unique
  gender    Gender   
  address   String
  city      String
  state     String
  pincode   String

  dob       DateTime
  vrkpId    String   @unique


  healthRecords HealthRecord?

  programId  String
  programs  Program @relation(fields: [programId], references: [id])

  programsStartedAt DateTime @default(now())
  programsExpireAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([phone])
  @@index([email])
  @@index([aadhaar])
}

model Program {
  id          String   @id @default(uuid())
  name        String
  description String

  members     Member[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}


model HealthRecord {
  id          String           @id @default(uuid())

  memberId    String   @unique
  member      Member           @relation(fields: [memberId], references: [id])

  date        DateTime

  data        Json

  notes       String?

  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([memberId])

}


model EmailLog {
  id             String    @id @default(uuid())

  // core info
  templateKey    String
  toAddress      String
  fromAddress    String?
  bounceAddress  String?

  // dynamic data
  mergeInfo      Json
  responseStatus Int?
  responseData   Json?

  // resend / tracking
  sentAt         DateTime  @default(now())
  resentCount    Int       @default(0)
  lastTriedAt    DateTime? // updated when retry is attempted
  isDelivered    Boolean   @default(false)
  errorMessage   String?   // if any error occurred in sending

  // optional references (for cross-app linking)
  applicationId  String?   // e.g. link to ULHC Member or VRKP user if needed
  tag            String?   // e.g. "ULHC_REGISTRATION" or "PASSWORD_RESET"

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}


model Partner {
  id          String   @id @default(uuid())
  name        String

 categoryId    String
  category      PartnerCategory @relation(fields: [categoryId], references: [id])

  typeId        String
  type          PartnerType @relation(fields: [typeId], references: [id])

  stateId     String
  state       State    @relation(fields: [stateId], references: [id])

  districtId  String
  district    District @relation(fields: [districtId], references: [id])

  address     String
  logoUrl     String?
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([categoryId])
  @@index([ districtId])
  @@index([ stateId])
}

model PartnerCategory {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  isActive  Boolean  @default(true)
  priority  Int      @default(0)

  partners  Partner[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model PartnerType {
  id        String   @id @default(uuid())
  name      String   @unique   // Private, Government, Trust, NGO, etc
  slug      String   @unique
  isActive  Boolean  @default(true)
  priority  Int      @default(0)

  partners  Partner[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model State {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String?  @unique
  isActive  Boolean  @default(true)
  priority  Int      @default(0)

  districts District[]
  partners  Partner[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model District {
  id        String   @id @default(uuid())
  name      String
  code      String?
  isActive  Boolean  @default(true)
  priority  Int      @default(0)

  stateId   String
  state     State    @relation(fields: [stateId], references: [id])

  partners  Partner[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([stateId, name])
}


enum Role {
  ADMIN
  SUPER_ADMIN
}

model Admin {
  id        String   @id @default(uuid())
  name      String
  phone     String   @unique
  email     String   @unique
  partnerId String?
  
  password  String
  role      Role     @default(ADMIN)
  isActive  Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



